<Page x:Class="CarRental.Views.SidePanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarRental.Views"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="180"
      Title="SidePanelPage">

    <Grid>
        <Border Margin="20,20,-20,20" Background="White" BorderThickness="0" CornerRadius="20">
            <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0">
                <Button x:Name="NewsButton" Style="{StaticResource SidePanelButton}" FontSize="16" Click="NewsButtonClick" Foreground="White" Cursor="Hand" BorderBrush="#FF9C4158">Новости</Button>
                <Button x:Name="AutomobileButton" Style="{StaticResource SidePanelButton}" FontSize="16" Click="AutomobileButtonClick" Foreground="White" Cursor="Hand" BorderBrush="#FF9C4158">Автомобили</Button>
            </StackPanel>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="Black" Opacity="0.2"/>
            </Border.Effect>
        </Border>
    </Grid>
</Page>
