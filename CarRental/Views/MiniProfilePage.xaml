<Page x:Class="CarRental.Views.MiniProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarRental.Views"
      mc:Ignorable="d" 
      d:DesignHeight="180" d:DesignWidth="180"
      Title="MiniProfilePage">

    <Grid>

        <Border Width="170" Height="130" Background="Crimson" BorderThickness="0" CornerRadius="20" Margin="20,0,-20,5">
            <StackPanel>
                <TextBlock x:Name="FirstNameTextBlock" FontSize="12" Margin="0,5,0,0" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center">Людмила</TextBlock>
                <TextBlock x:Name="MiddleNameTextBlock" FontSize="12" Margin="0,5,0,0" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center">фщцтвщфцawd</TextBlock>
                <TextBlock x:Name="LastNameTextBlock" FontSize="12" Margin="0,5,0,0" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center">Николаевна</TextBlock>
                <Button x:Name="Profile" Style="{StaticResource AllButton}" FontSize="12" Margin="0,35,0,0" Foreground="#d4a965" Height="20" Width="60">Профиль</Button>
            </StackPanel>
        </Border>

    </Grid>
</Page>
