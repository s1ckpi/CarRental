<Page x:Class="CarRental.Views.AdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarRental.Views"
      mc:Ignorable="d" 
      Background="Transparent"
      MinHeight="600" MinWidth="800"
      MaxHeight="1040" MaxWidth="1920"
      Title="AdminMenu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Column="0">Клиенты</Button>
        <Button Grid.Column="1">Автомобили</Button>
        <Button Grid.Row="1">Выдача</Button>
        <Button Grid.Row="1" Grid.Column="1">Ремонт</Button>
    </Grid>
</Page>
